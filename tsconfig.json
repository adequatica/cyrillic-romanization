{
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "removeComments": true,
    "moduleResolution": "node"
  }
}
