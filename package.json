{
  "name": "cyrillic-romanization",
  "version": "1.1.3",
  "description": "Convert Cyrillic characters to Latin characters (transliteration)",
  "keywords": [
    "bulgarian",
    "cyrillic",
    "iso9",
    "latin",
    "macedonian",
    "mongolian",
    "montenegrin",
    "serbian",
    "romanization",
    "transliteration"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adequatica/cyrillic-romanization"
  },
  "author": "Andrey Enin",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=21"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "eslint": "8.57.0",
    "prettier": "3.2.5",
    "tsc-alias": "1.8.8",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig-tsc-alias.json && tsc-alias -p tsconfig-tsc-alias.json",
    "format": "npx prettier --write .",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "eslint --fix '**/*.{js,ts}'",
    "test": "vitest run"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ]
}
