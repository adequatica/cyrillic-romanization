{
  "name": "cyrillic-romanization",
  "version": "1.1.8",
  "description": "Convert Cyrillic characters to Latin characters (transliteration)",
  "keywords": [
    "ala-lc",
    "alphabet",
    "belarusian",
    "bulgarian",
    "cyrillic",
    "gaj",
    "iso9",
    "kazakh",
    "language",
    "latin",
    "macedonian",
    "mongolian",
    "montenegrin",
    "romanization",
    "russian",
    "serbian",
    "transliteration",
    "turkmen",
    "ukrainian",
    "uzbek"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adequatica/cyrillic-romanization"
  },
  "author": "Andrey Enin",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@eslint/js": "9.12.0",
    "@stylistic/eslint-plugin-ts": "2.9.0",
    "@types/eslint__js": "8.42.3",
    "@typescript-eslint/parser": "8.10.0",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "prettier": "3.3.3",
    "tsc-alias": "1.8.10",
    "typescript": "5.5.4",
    "typescript-eslint": "8.7.0",
    "vitest": "3.0.5"
  },
  "scripts": {
    "build": "tsc --project tsconfig-tsc-alias.json && tsc-alias -p tsconfig-tsc-alias.json",
    "format": "npx prettier --write .",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "eslint --fix",
    "test": "vitest run"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ]
}
